@page
@model SynthesisWeb.Pages.LoginModel
@{
}
<!DOCTYPE html>
<html lang="en">
 <head>
   <meta charset="UTF-8">
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   <title>
       DuelSys Inc.
   </title>
   <link rel="stylesheet" href="site.css">
</head>
<body style="background-color:rgb(163, 197, 236)">
    <div>
        <nav class="navbar navbar-expand-lg py-4 navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-page="/Index">DuelSys Inc.</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                  <li class="nav-item">
                    <a class="nav-link"  asp-page="/Index">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" asp-page="/Tournaments">Tournaments</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link active"  asp-page="/Login">Log In</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" asp-page="/Register">Register</a>
                  </li>
                </ul>
              </div>
            </div>
          </nav>
    </div>
    <br>
    <h1 style="text-align: center;font-size: 50px;">Login</h1>
    <br>
    <br>
    <div style="background-color:rgb(45, 45, 45);margin: 0 auto;max-width: 50%;border-radius: 15px;">
        <form method="post">
            <br>
            <div class="form-group" style="color:rgb(255, 255, 255);margin: 0 auto;max-width: 75%;">
                <label> Username:</label> <span asp-validation-for="Username"></span>
                <input asp-for="Username" class="form-control" id="username">
            </div>
            <div class="form-group" style="color:rgb(255, 255, 255);margin: 0 auto;max-width: 75%;">
                <label> Password:</label> <span asp-validation-for="Password"></span>
                <input asp-for="Password" type="password" class="form-control" id="password">
            </div>
            <br>
            <p style="color: white;text-align: center">@ViewData["ErrorMessage"]</p>
            <button type="submit" class="btn btn-primary" style="width: 250px;position: relative;left: 37%;">Login</button>
            <br>
            <a style="text-align: center;font-size: 15px;color:rgb(255, 255, 255);">Don't have a account!</a>
            <p><a href="Register" style="font-size: 18px;text-align: center;">Register here</a></p>
         </form>
         <br>
    </div>
    <br>
    <br>
    <br>
    <br>
    <br>
    <footer class="bg-dark text-center text-white">
        <br>
        <h2>Visit our social media accounts!</h2>
        <div class="container p-4 pb-0">
            <section class="mb-4">
                <!-- Facebook -->
                <a class="btn btn-outline-light btn-floating m-1" href="https://www.facebook.com/lachko.mitov" role="button"
                ><i class="fa fa-facebook-f"></i
                ></a>
                <!-- Twitter -->
                <a class="btn btn-outline-light btn-floating m-1" href="https://twitter.com/Luc68358959" role="button"
                ><i class="fa fa-twitter"></i
                ></a>
                <!-- Instagram -->
                <a class="btn btn-outline-light btn-floating m-1" href="https://www.instagram.com/luchounited/" role="button"
                ><i class="fa fa-instagram"></i
                ></a>
                <!-- Linkedin -->
                <a class="btn btn-outline-light btn-floating m-1" href="https://www.linkedin.com/in/lachezar-mitov-922b49230/" role="button"
                ><i class="fa fa-linkedin"></i
                ></a>
            </section>
        </div>
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
      © 2022 DuelSys Inc.
    </div>
  </footer>
</body>
</html>




