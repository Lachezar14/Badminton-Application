@page
@using Entities
@model SynthesisWeb.Pages.ResultsModel
@{
}
<!DOCTYPE html>
<html lang="en">
 <head>
   <meta charset="UTF-8">
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   <title>
      The Racing Store
   </title>
   <link rel="stylesheet" href="site.css">
</head>
<body style="background-color:rgb(163, 197, 236)">
    <div>
        <nav class="navbar navbar-expand-lg py-4 navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-page="/Index">DuelSys Inc.</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    @if (@Model.Player == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link active" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Tournaments">Tournaments</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Login">Log In</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Register">Register</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link active" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Tournaments">Tournaments</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Account">Account</a>
                        </li>
                    }
                </ul>
              </div>
            </div>
          </nav>
    </div>
<h1 style="text-align: center;font-size: 50px;height: 100px;">@Model.Tournament.Description</h1>
<h3 style="text-align: center;font-size: 40px;height: 100px;">Schedule:</h3>
<div style="text-align: -moz-left;font-size: 20px; font-weight: bold; margin-left: auto; margin-right: auto;width: 27em">
    <ul>
        @{
            foreach (AMatch match in Model.Matches)
            {
                    <li>@match.ToString()</li>
            }
        }
    </ul> 
    <br>
</div>
    <h3 style="text-align: center;font-size: 40px;height: 100px;">Results:</h3>
    <div>
        <table class="table" id="myTable" style="margin-left: auto; margin-right: auto; text-align: center; height: 200px; max-width: 80%;">
            <thead>
            <tr>
                <th scope="col">Tournament place</th>
                <th scope="col">Player Name</th>
                <th scope="col">Number of Wins</th>
            </tr>
            </thead>
            @{
                int br = 0;
                foreach (var p in Model.PlayerWins.OrderByDescending(x=> x.Value))
                {
                    br++;
                        <tbody>
                        <td>@br place</td>
                        <td>@p.Key.ToString()</td>
                        <td id="place">@p.Value</td>
                        </tbody>

                }
            }
        </table>
    </div>
    <br>
    <br>
    <div style="text-align:center;">
    <a href="Tournaments"><button type="button" class="btn btn-primary" style="width: 300px;height: 65px;border-radius: 15px;">Go Back</button></a>
  </div>
  <br>
  <br>
    <footer class="bg-dark text-center text-white">
        <br>
        <h2>Visit our social media accounts!</h2>
        <div class="container p-4 pb-0">
        <section class="mb-4">
            <!-- Facebook -->
            <a class="btn btn-outline-light btn-floating m-1" href="https://www.facebook.com/lachko.mitov" role="button"
            ><i class="fa fa-facebook-f"></i
            ></a>
            <!-- Twitter -->
            <a class="btn btn-outline-light btn-floating m-1" href="https://twitter.com/Luc68358959" role="button"
            ><i class="fa fa-twitter"></i
            ></a>
            <!-- Instagram -->
            <a class="btn btn-outline-light btn-floating m-1" href="https://www.instagram.com/luchounited/" role="button"
            ><i class="fa fa-instagram"></i
            ></a>
            <!-- Linkedin -->
            <a class="btn btn-outline-light btn-floating m-1" href="https://www.linkedin.com/in/lachezar-mitov-922b49230/" role="button"
            ><i class="fa fa-linkedin"></i
            ></a>
        </section>
        </div>
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
      © 2022 DuelSys Inc.
    </div>
  </footer>
</body>
</html>