@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!DOCTYPE html>
<html lang="en">
 <head>
   <meta charset="UTF-8">
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   <title>
       DuelSys Inc.
   </title>
   <link rel="stylesheet" href="site.css">
</head>
<body style="background-color: rgb(117,161,186);">
    <div>
        <nav class="navbar navbar-expand-lg py-4 navbar-dark bg-dark">
            <div class="container-fluid">
              <a class="navbar-brand" asp-page="/Index">DuelSys Inc.</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                  <ul class="navbar-nav">
                      @if (@Model.Player == null)
                      {
                          <li class="nav-item">
                              <a class="nav-link active" asp-page="/Index">Home</a>
                          </li>
                          <li class="nav-item">
                              <a class="nav-link" asp-page="/Tournaments">Tournaments</a>
                          </li>
                          <li class="nav-item">
                              <a class="nav-link" asp-page="/Login">Log In</a>
                          </li>
                          <li class="nav-item">
                              <a class="nav-link" asp-page="/Register">Register</a>
                          </li>
                      }
                      else
                      {
                          <li class="nav-item">
                              <a class="nav-link active" asp-page="/Index">Home</a>
                          </li>
                          <li class="nav-item">
                              <a class="nav-link" asp-page="/Tournaments">Tournaments</a>
                          </li>
                          <li class="nav-item">
                              <a class="nav-link" asp-page="/Account">Account</a>
                          </li>
                      }
                  </ul>
              </div>
            </div>
          </nav>
    </div>
    <div>
        <img src="/images/sport-congresse.jpg" class="img-fluid"> 
    </div>
    <div class="list-group" style="max-width: 98%;margin: 0 auto;">
        <div class="list-group-item list-group-item-action flex-column align-items-start" style="background-color: rgb(248,248,248);border-radius: 5px;">
          <br>
          <div class="d-flex w-100 justify-content-between">
            <h1 class="mb-1" style="margin: 0 auto;">Badminton Tournaments</h1>
          </div>
          <p style="text-align: center;">See all available badminton tournaments we have to offer</p>
          <br>
          <a href="Tournaments"><button type="button" class="btn btn-primary" style="position: relative;left: 36%;width: 30%;">Go to Tournaments</button></a>
        </div>
        <br>
    </div>

    <footer class="bg-dark text-center text-white">
        <br>
        <h2>Visit our social media accounts!</h2>
        <div class="container p-4 pb-0">
            <section class="mb-4">
                <!-- Facebook -->
                <a class="btn btn-outline-light btn-floating m-1" href="https://www.facebook.com/lachko.mitov" role="button"
                ><i class="fa fa-facebook-f"></i
                ></a>
                <!-- Twitter -->
                <a class="btn btn-outline-light btn-floating m-1" href="https://twitter.com/Luc68358959" role="button"
                ><i class="fa fa-twitter"></i
                ></a>
                <!-- Instagram -->
                <a class="btn btn-outline-light btn-floating m-1" href="https://www.instagram.com/luchounited/" role="button"
                ><i class="fa fa-instagram"></i
                ></a>
                <!-- Linkedin -->
                <a class="btn btn-outline-light btn-floating m-1" href="https://www.linkedin.com/in/lachezar-mitov-922b49230/" role="button"
                ><i class="fa fa-linkedin"></i
                ></a>
            </section>
        </div>
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
      © 2022 DuelSys Inc.
    </div>
  </footer>
</body>
</html>



